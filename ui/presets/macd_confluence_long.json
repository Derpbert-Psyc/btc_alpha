  "entry_rules": [
    {
      "label": "long_entry",
      "direction": "LONG",
      "evaluation_cadence": "5m",
      "entry_type": "MARKET",
      "condition_groups": [
        {
          "label": "macro_alignment",
          "description": "All macro TF MACD slopes must be positive",
          "role_condition": {
            "role": "filter",
            "filter_group": "macro",
            "output": "slope_sign",
            "operator": ">",
            "value": "0",
            "quantifier": "ALL"
          }
        },
        {
          "label": "intra_alignment",
          "description": "All intra TF MACD slopes must be positive",
          "role_condition": {
            "role": "filter",
            "filter_group": "intra",
            "output": "slope_sign",
            "operator": ">",
            "value": "0",
            "quantifier": "ALL"
          }
        }
      ],
      "conditions": [
        {
          "role": "entry_signal",
          "output": "slope_sign",
          "operator": "crosses_above",
          "value": "0"
        }
      ]
    }
  ],

  "exit_rules": [
    {
      "label": "long_signal_exit",
      "exit_type": "SIGNAL",
      "applies_to": ["LONG"],
      "evaluation_cadence": "1d",
